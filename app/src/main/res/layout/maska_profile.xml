<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="174dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout

            android:id="@+id/Horiz_fon"
            android:layout_width="176dp"
            android:layout_height="132dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/fon"
            android:gravity="center|center_horizontal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.094">

            <ImageView
                android:id="@+id/ppz"
                android:layout_width="176dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/ku"
                android:background="@drawable/corn"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/ppz"
                android:layout_alignTop="@+id/ppz"
                android:layout_alignEnd="@+id/ppz"
                android:layout_alignBottom="@+id/ppz"
                android:layout_marginStart="47dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="-1dp"
                android:layout_marginBottom="2dp"
                android:gravity="center_horizontal"
                android:text="Спокойный"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/Horiz_fon1"
            android:layout_width="176dp"
            android:layout_height="132dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/fon"
            android:gravity="center|center_horizontal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/Horiz_fon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.094">

            <ImageView
                android:id="@+id/ppz1"
                android:layout_width="176dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/ku"
                android:background="@drawable/corn"
                />

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/ppz1"
                android:layout_alignTop="@+id/ppz1"
                android:layout_alignEnd="@+id/ppz1"
                android:layout_alignBottom="@+id/ppz1"
                android:layout_marginStart="44dp"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="3dp"
                android:gravity="center_horizontal"
                android:text="Спокойный"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>